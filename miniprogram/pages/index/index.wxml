<!--index.wxml-->
<view class="container">

  <!-- <view style="background:#14517E;width:100%;height:44rpx;"></view> -->
  <!-- 标题栏 -->
  <view class="container-h" style="background:white;width:100%;height:96rpx;align-items:center;">
    <image src="{{bluetoothAvailable? '../../images/ic_bluetooth_blue.png':'../../images/ic_bluetooth_red.png'}}" style="height:40rpx;margin-left:20rpx;" mode="heightFix"></image>
    <view style="flex:1;"></view>
    <text style="color:black;">{{logo}}</text>
    <view style="flex:1;"></view>
    <image src="../../images/ic_scancode.png" style="height:50rpx;margin-right:20rpx;" mode="heightFix" bindtap="scanCode"></image>
    <image src="{{RSSI_Image}}" style="height:30rpx;margin-right:20rpx;" mode="heightFix"></image>
  </view>
  <!-- <view style="width:100%;height:{{topSpace}}rpx;"></view> -->
  <view class="container-r" style="width:80%;margin: 0% 10%;">
    <view class="container-v" style="width:100%;">
      <image src="../../images/ctrl_top_bg.png" style="position:absolute;width:100%;margin-top: 510rpx;" mode="widthFix"></image>
    </view>
    <view class="container-v" style="width:100%;align-items: center;">
      <image src="../../images/img_moto_normal.png" style="position:absolute;width:55%;margin-top:190rpx;margin-left:20px;" mode="widthFix" bindtap="test">
      </image>
    </view>
  </view>
  <!-- 测试不同连接状态下的UI -->
  <!-- <switch bindchange="testConnectionState"></switch> -->
  <view class="container-v" style="margin-top: 860rpx;">
    <!-- 未连接设备时的4个功能按键 -->
    <view class="container-r" style="display:{{connected? 'none':'flex'}};">
      <!-- 644 * 147 -->
      <image src="../../images/btn_layout_bg.png" style="width: 644rpx;height: 147rpx;"/>
      <view class="container-h" style="position: absolute;width: 100%;">
        <view style="flex: 0.5;"></view>
        <view class="container-r btn_lay">
          <!-- 67 * 89 -->
          <image src="../../images/btn_lock_disabled.png" class="btn_nor"mode="heightFix"/>
        </view>
        <view class="container-r btn_lay">
          <!-- 69 * 91 -->
          <image src="../../images/btn_unlock_disabled.png" class="btn_nor" mode="heightFix"/>
        </view>
        <view class="container-r btn_lay">
          <!-- 91 * 75 -->
          <image src="../../images/{{isCall?'btn_ring_disabled':'btn_open_disabled'}}.png" class="btn_nor"mode="heightFix"/>
        </view>
        <view class="container-r btn_lay">
          <image src="../../images/btn_start_disabled.png" class="btn_nor"mode="heightFix"/>
        </view>
        <view style="flex: 0.5;"></view>
      </view>
    </view>
    <!-- 连接设备时的五个功能按键 -->
    <view class="container-r" style="display:{{connected? 'flex':'none'}};">
      <!-- 644 * 147 -->
      <image src="../../images/btn_layout_bg.png" style="width: 644rpx;height: 147rpx;"/>
      <view class="container-h" style="position: absolute;width: 100%;">
        <view style="flex: 0.5;"></view>
        <view class="container-r btn_lay">
          <!-- 112 * 111 -->
          <image src="../../images/btn_bg_sel.png" class="btn_sel" style="display: {{selectedBtn == 1 ? 'block':'none'}};"/>
          <!-- 67 * 89 -->
          <image src="{{imageOfLtBtn}}" class="btn_nor"mode="heightFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="1"/>
        </view>
        <view class="container-r btn_lay">
          <!-- 112 * 111 -->
          <image src="../../images/btn_bg_sel.png" class="btn_sel" style="display: {{selectedBtn == 2 ? 'block':'none'}};"/>
          <!-- 69 * 91 -->
          <image src="{{imageOfRtBtn}}" class="btn_nor" mode="heightFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="2"/>
        </view>
        <view class="container-r btn_lay">
          <!-- 112 * 111 -->
          <image src="../../images/btn_bg_sel.png" class="btn_sel" style="display: {{selectedBtn == 3 ? 'block':'none'}};"/>
          <!-- 91 * 75 -->
          <image src="{{imageOfLbBtn}}" class="btn_nor"mode="heightFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="3"/>
        </view>
        <view class="container-r btn_lay">
          <!-- 112 * 111 -->
          <image src="../../images/btn_bg_sel.png" class="btn_sel" style="display: {{selectedBtn == 0 ? 'block':'none'}};"/>
          <image src="{{imageOfStartBtn}}" class="btn_nor"mode="heightFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="0"/>
        </view>
        <view style="flex: 0.5;"></view>
      </view>
    </view>
    <!--  -->
    <view class="container-h" style="margin-top: 20rpx;">
      <view style="flex: 0.5;"></view>
      <text class="btn_label">锁车</text>
      <text class="btn_label">解锁</text>
      <text class="btn_label">{{isCall?'响铃':'开座包'}}</text>
      <text class="btn_label">启动</text>
      <view style="flex: 0.5;"></view>
    </view>
  </view>
</view>