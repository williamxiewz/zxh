<!--index.wxml-->
<view class="container">

  <!-- <view style="background:#14517E;width:100%;height:44rpx;"></view> -->
  <!-- 标题栏 -->
  <view class="container-h" style="background:#14517E;width:100%;height:96rpx;align-items:center;">
    <image src="{{bluetoothAvailable? '../../images/ic_bluetooth_blue.png':'../../images/ic_bluetooth_red.png'}}" style="height:40rpx;margin-left:20rpx;" mode="heightFix"></image>
    <view style="flex:1.3;"></view>
    <!-- <text style="color:white;">{{logo}}</text> -->
    <image src="../../images/logo.png" style="width:40%;" mode="widthFix"></image>
    <view style="flex:1;"></view>
    <image src="../../images/ic_scancode.png" style="height:50rpx;margin-right:20rpx;" mode="heightFix" bindtap="scanCode"></image>
    <image src="{{RSSI_Image}}" style="height:30rpx;margin-right:20rpx;" mode="heightFix"></image>
  </view>

  <!-- logo -->
  <!-- <view class="container-r" style="width:100%;margin-top: 80rpx;">
    <image src="../../images/logo.png" style="position:absolute;width:{{logoWidth}}%;" mode="widthFix"></image>
  </view> -->

  <view class="container-r" style="width:100%;">
    <view class="container-v" style="width:100%;">
      <image src="../../images/ctrl_top_bg.png" style="position:absolute;width:100%;" mode="widthFix"></image>
    </view>
    <view class="container-v" style="width:100%;margin-top:150rpx;align-items: center;">
      <!-- 63*68 -->
      <image src="{{imageOfState}}" style="display:{{isStart? 'none':'block'}};position:absolute;width:141rpx;height:71rpx;"></image>
      <image src="../../images/ic_start_red.png" style="display:{{isStart? 'block':'none'}};position:absolute;width:141rpx;height:71rpx;margin-top:25rpx">
      </image>
      <image src="{{imageOfMoto}}" style="position:absolute;width:70%;margin-top:100rpx;margin-left:20px;" mode="widthFix" bindtap="test">
      </image>
    </view>
  </view>

  <!-- 测试不同连接状态的UI -->
  <!-- <switch bindchange="testConnectionState"></switch> -->

  <!-- 未连接设备时的五个功能按键 -->
  <view class="container-r" style="margin-top:{{bottomLayoutMatginTop}}rpx;display:{{connected? 'none':'flex'}};">
    <view class="container-v" style="width:{{bottomLayoutWidth}}%;position:absolute;padding-left:8%;">
      <view class="container-h">
        <image src="../../images/btn_lt_disabled.png" style="width:45%;" mode="widthFix"></image>
        <view style="width:6px;"></view>
        <image src="../../images/btn_rt_disabled.png" style="width:45%;" mode="widthFix"></image>
      </view>
      <view class="container-h">
        <image src="../../images/btn_lb_disabled.png" style="width:45%;" mode="widthFix"></image>
        <view style="width:6px;"></view>
        <image src="../../images/{{isCall?'btn_rb_disabled':'btn_rb_disabled_2'}}.png" style="width:45%;" mode="widthFix"></image>
      </view>
    </view>
    <image src="../../images/btn_start_disabled.png" style="width:260rpx;position:absolute;height: auto;" mode="widthFix"></image>
  </view>

  <!-- 连接设备时的五个功能按键 -->
  <view class="container-r" style="margin-top:{{bottomLayoutMatginTop}}rpx;display:{{connected? 'flex':'none'}};">
    <view class="container-v" style="width:{{bottomLayoutWidth}}%;position:absolute;padding-left:8%;">
      <view class="container-h">
        <image src="{{imageOfLtBtn}}" style="width:45%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="1"></image>
        <view style="width:6px;"></view>
        <image src="{{imageOfRtBtn}}" style="width:45%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="2"></image>
      </view>
      <view class="container-h" style="margin-top:3px;">
        <image src="{{imageOfLbBtn}}" style="width:45%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="3"></image>
        <view style="width:6px;"></view>
        <image src="{{imageOfRbBtn}}" style="width:45%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="4"></image>
      </view>
    </view>
    <!-- 339*275 -->
    <image src='{{imageOfStartBtn}}' style="width:260rpx;position:absolute;height: auto;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="0"></image>
  </view>

</view>