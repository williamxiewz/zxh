<!--index.wxml-->
<view class="container">

  <!-- <view style="background:#14517E;width:100%;height:44rpx;"></view> -->
  <!-- 标题栏 -->
  <view class="container-h" style="background:#14517E;width:100%;height:96rpx;align-items:center;">
    <image src="{{bluetoothAvailable? '../../images/ic_bluetooth_blue.png':'../../images/ic_bluetooth_red.png'}}" style="height:40rpx;margin-left:20rpx;" mode="heightFix"></image>
    <view style="flex:1.3;"></view>
    <image src="../../images/logo.png" style="width:50%;" mode="widthFix"></image>
    <view style="flex:1;"></view>
    <image src="../../images/ic_scancode.png" style="height:50rpx;margin-right:20rpx;" mode="heightFix" bindtap="scanCode"></image>
    <image src="{{RSSI_Image}}" style="height:30rpx;margin-right:20rpx;" mode="heightFix"></image>
  </view>
  <!-- <view style="width:100%;height:{{topSpace}}rpx;"></view> -->
  <view class="container-r" style="width:100%;">
    <view class="container-v" style="width:100%;">
      <image src="../../images/ctrl_top_bg.png" style="position:absolute;width:100%;margin-top: 0rpx;" mode="widthFix"></image>
    </view>
    <view class="container-v" style="width:100%;margin-top:150rpx;align-items: center;">
      <!-- 362*226 -->
      <image src="{{imageOfState}}" style="position:absolute;width:362rpx;height:226rpx;"></image>
      <image src="../../images/img_moto.png" style="position:absolute;width:55%;margin-top:190rpx;margin-left:20px;" mode="widthFix" bindtap="test">
      </image>
    </view>
  </view>


  <!-- 未连接设备时的五个功能按键 -->
  <view class="container-r" style="margin-top:{{bottomLayoutMatginTop}}rpx;display:{{connected? 'none':'flex'}};">
    <view class="container-v" style="width:{{bottomLayoutWidth}}%;position:absolute;padding:0px 6px;">
      <view class="container-h">
        <view class="container-r" style="width:50%;">
          <image src="../../images/btn_normal.png" style="position: absolute;width:100%;" mode="widthFix"/>
          <image src="../../images/ic_unlock.png"style="position: absolute;width:50rpx;" mode="widthFix"/>
        </view>
        <view style="width:50rpx;"></view>
        <view class="container-r" style="width:50%;">
          <image src="../../images/btn_normal.png" style="position: absolute;width:100%;" mode="widthFix"/>
          <image src="../../images/ic_lock.png"style="position: absolute;width:50rpx;" mode="widthFix"/>
        </view>
      </view>
      <view class="container-h" style="margin-top:150rpx;">
        <view class="container-r" style="width:50%;">
          <image src="../../images/btn_normal.png" style="position: absolute;width:100%;" mode="widthFix"/>
          <image src="../../images/ic_mute.png"style="position: absolute;width:60rpx;" mode="widthFix"/>
        </view>
        <view style="width:50rpx;"></view>
        <view class="container-r" style="width:50%;">
          <image src="../../images/btn_normal.png" style="position: absolute;width:100%;" mode="widthFix"/>
          <image src="../../images/ic_ring.png" style="position: absolute;width:60rpx;" mode="widthFix"/>
        </view>
      </view>
    </view>
    <image src="../../images/btn_start_disabled.png" style="width:200rpx;position:absolute;" mode="widthFix"></image>
  </view>

  <!-- 连接设备时的五个功能按键 -->
  <view class="container-r" style="margin-top:{{bottomLayoutMatginTop}}rpx;display:{{connected? 'flex':'none'}};">
    <view class="container-v" style="width:{{bottomLayoutWidth}}%;position:absolute;padding:0px 6px;">
      <view class="container-h">
        <view class="container-r" style="width:50%;">
          <image src="{{imageOfLtBtn}}" style="position: absolute;width:100%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="1"/>
          <image src="../../images/ic_unlock.png"style="position: absolute;width:50rpx;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="1"/>
        </view>
        <view style="width:50rpx;"></view>
        <view class="container-r" style="width:50%;">
          <image src="{{imageOfRtBtn}}" style="position: absolute;width:100%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="2"/>
          <image src="../../images/ic_lock.png"style="position: absolute;width:50rpx;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="2"/>
        </view>
      </view>
      <view class="container-h" style="margin-top:150rpx;">
        <view class="container-r" style="width:50%;">
          <image src="{{imageOfLbBtn}}" style="position: absolute;width:100%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="3"/>
          <image src="../../images/ic_mute.png"style="position: absolute;width:60rpx;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="3"/>
        </view>
        <view style="width:50rpx;"></view>
        <view class="container-r" style="width:50%;">
          <image src="{{imageOfRbBtn}}" style="position: absolute;width:100%;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="4"/>
          <image src="../../images/ic_ring.png" style="position: absolute;width:60rpx;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="4"/>
        </view>
      </view>
    </view>
    <image src='{{imageOfStartBtn}}' style="width:200rpx;position:absolute;" mode="widthFix" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" data-btnindex="0"></image>
  </view>
</view>