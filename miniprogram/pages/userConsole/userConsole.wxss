/* pages/userConsole/userConsole.wxss */

@import "../../style/guide.wxss";

.userinfo {
  margin-top: 20rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  padding-left: 40rpx;
  /* transition: all 300ms ease; */
}

/* .userinfo {
  padding-left: 40rpx;
  background: transparent;
} */

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: gray;
}

/* .userinfo-avatar[size] {
  width: 100rpx;
} */


/* .userinfo-avatar:after {
  border: none;
} */

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  flex: 1;
  background-color: white;
  background-size: cover;
  text-align: left;
  padding-left: 20rpx;
  margin-left: 0px;
}

.userinfo-nickname::after {
  border: none;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

.radio {
  width: 93%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  background-color: white;
  height: 80rpx;
  padding: 0rpx 20rpx;
  margin-top: 20rpx;
}

.radio-checked {
  border: 6rpx solid #007aff;
}

.radio-unchecked {
  border: 3rpx solid grey;
}

.input2 {
  border: 2rpx solid #aaa;
  border-radius: 10rpx;
  height: 60rpx;
  width: 420rpx;
  line-height: 60rpx;
  padding: 0rpx 20rpx;
}


.button_save {
  /*这样设置width会包含border宽度*/
  box-sizing: border-box;
  background-color: #2d82e5;
  border-radius: 30rpx;
  height: 60rpx;
  width: 100rpx;
  line-height: 60rpx;
  display: inline-block;
  color: white;
  padding: 0rpx 0rpx;
  text-align: center;
  font-size: 28rpx;
}

.button_save_gray {
  background-color: #8a8a8a;
  border-radius: 30rpx;
  height: 60rpx;
  width: 180rpx;
  line-height: 60rpx;
  color: white;
  padding: 0rpx 0rpx;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 28rpx;
  margin-left: 30rpx;
  cursor: pointer;
}