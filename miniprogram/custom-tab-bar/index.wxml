<!--miniprogram/custom-tab-bar/index.wxml-->
<cover-view class="tab-bar">
  <!-- <cover-view class="tab-bar-border"></cover-view> -->
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}"
    bindtap="switchTab">
    <cover-view class="container-r" style="width: 100%;height: 54px;">
      <cover-image style="position: absolute;width: 50%;height: 54px;" mode="widthFix" src="{{selected === index ? '/images/tab_item_bg_sel.png' : '/images/tab_item_bg_nor.png'}}"></cover-image>
      <cover-view class="tab-bar-item">
        <cover-image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
        <cover-view style="color: {{selected === index ? selectedColor : color}};font-size:16px;margin-left:6px;">
          {{item.text}}
        </cover-view>
      </cover-view>
    </cover-view>
  </cover-view>
</cover-view>