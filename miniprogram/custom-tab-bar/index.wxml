<!--miniprogram/custom-tab-bar/index.wxml-->
<cover-view class="tab-bar">
  <!-- 375 * 65 -->
  <!-- <cover-image class="tab-bar-bg" src="{{bg_path}}"></cover-image> -->
  <!-- <cover-view class="tab-bar-border"></cover-view> -->
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}"
    bindtap="switchTab">
    <!-- 原图尺寸 489 * 138 -->
    <cover-image src="{{selected === 1 ? item.selectedIconPath : item.iconPath}}"></cover-image>
  </cover-view>
</cover-view>